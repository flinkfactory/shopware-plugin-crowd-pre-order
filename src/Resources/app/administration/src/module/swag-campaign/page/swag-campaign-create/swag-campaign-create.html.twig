{% block swag_campaign_create %}
    <sw-page class="swag-campaign-create">
        <template #smart-bar-header>
            <h2>
                {{ $tc('swag-campaign.create.textHeadline') }}
            </h2>
        </template>

        <template #smart-bar-actions>
            <sw-button :routerLink="{ name: 'swag.campaign.list' }">
                {{ $tc('swag-campaign.detail.buttonCancel') }}
            </sw-button>

            <sw-button-process
                    :isLoading="isLoading"
                    :processSuccess="processSuccess"
                    variant="primary"
                    @process-finish="saveFinish"
                    @click="onSave">
                {{ $tc('swag-campaign.detail.buttonSave') }}
            </sw-button-process>
        </template>

        <template #content>
            <sw-card-view>
                <sw-card v-if="campaign" :isLoading="isLoading">
                    <sw-container columns="repeat(2, 1fr)" gap="0 30px">
                        <sw-field
                                v-model="campaign.title"
                                type="text"
                                :label="$tc('swag-campaign.detail.fieldTitle')"
                                :placeholder="$tc('swag-campaign.create.placeholderTitle')"
                                required>
                        </sw-field>

                        <sw-entity-single-select
                                v-model="campaign.productId"
                                entity="product"
                                :label="$tc('swag-campaign.detail.fieldProduct')"
                                :placeholder="$tc('swag-campaign.create.placeholderProduct')"
                                :criteria="productCriteria"
                                required>
                        </sw-entity-single-select>

                        <sw-datepicker
                                v-model="campaign.startDate"
                                dateType="datetime-local"
                                :label="$tc('swag-campaign.detail.fieldStartDate')"
                                required>
                        </sw-datepicker>

                        <sw-datepicker
                                v-model="campaign.endDate"
                                dateType="datetime-local"
                                :label="$tc('swag-campaign.detail.fieldEndDate')"
                                required>
                        </sw-datepicker>

                        <sw-number-field
                                v-model="campaign.targetQuantity"
                                :label="$tc('swag-campaign.detail.fieldTargetQuantity')"
                                :placeholder="$tc('swag-campaign.create.placeholderTargetQuantity')"
                                :helpText="$tc('swag-campaign.create.helpTargetQuantity')"
                                :min="0">
                        </sw-number-field>

                        <sw-number-field
                                v-model="campaign.targetRevenue"
                                :label="$tc('swag-campaign.detail.fieldTargetRevenue')"
                                :placeholder="$tc('swag-campaign.create.placeholderTargetRevenue')"
                                :helpText="$tc('swag-campaign.create.helpTargetRevenue')"
                                :min="0"
                                :digits="2">
                        </sw-number-field>

                        <sw-switch-field
                                v-model="campaign.active"
                                :label="$tc('swag-campaign.detail.fieldActive')"
                                :helpText="$tc('swag-campaign.create.helpActive')">
                        </sw-switch-field>
                    </sw-container>

                    <sw-alert variant="info" class="sw-campaign-create__info">
                        {{ $tc('swag-campaign.create.infoText') }}
                    </sw-alert>
                </sw-card>
            </sw-card-view>
        </template>
    </sw-page>
{% endblock %}