<?xml version="1.0" encoding="utf-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/shopware/trunk/src/Core/System/SystemConfig/Schema/config.xsd">
    <card>
        <title>CrowdPreOrder Settings</title>
        <input-field type="float">
            <name>defaultDepositPercentage</name>
            <label lang="en-GB">Default deposit percentage</label>
            <label lang="de-DE">Standardanzahlung (%)</label>
            <helpText lang="en-GB">Percentage of the product price charged as deposit when pledging (0–100).</helpText>
            <helpText lang="de-DE">Prozentsatz des Produktpreises, der als Anzahlung berechnet wird (0–100).</helpText>
            <defaultValue>10</defaultValue>
        </input-field>
        <input-field type="int">
            <name>defaultCampaignDuration</name>
            <label lang="en-GB">Default campaign duration (days)</label>
            <label lang="de-DE">Standard Kampagnendauer (Tage)</label>
            <defaultValue>30</defaultValue>
        </input-field>
        <input-field type="int">
            <name>maxCampaignsPerProduct</name>
            <label lang="en-GB">Maximum campaigns per product</label>
            <label lang="de-DE">Maximale Kampagnen pro Produkt</label>
            <defaultValue>1</defaultValue>
        </input-field>
        <input-field type="bool">
            <name>enableReferral</name>
            <label lang="en-GB">Enable referral program</label>
            <label lang="de-DE">Empfehlungsprogramm aktivieren</label>
            <defaultValue>false</defaultValue>
        </input-field>
    </card>
</config>